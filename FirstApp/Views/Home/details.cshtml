@model HomeDetailsViewModel

@{ 
    ViewBag.Title = "Emp Detail";
}
   
   <div class="row justify-content-lg-center m-3>
       <div class="col-sm-8">
           <div class="card">
               <div class="card-header">
                   <h1>@Model.Employee.Name</h1>
               </div>
               <div class="card-body text-xl-center" >
                   <img src="~/test.png" class="card-img-top" height="150" />
                   <h4>ID :@Model.Employee.Id</h4>
                   <h4>Email :@Model.Employee.Email</h4>
                   <h4>Department :@Model.Employee.Department</h4>
               </div>
               <div class="card-footer text-xl-center">
                   <a asp-controller="home" asp-action="index"  class="btn btn-primary">Back</a>
                   <a href="#" class="btn btn-primary">Edit</a>
                   <a href="#" class="btn btn-danger">Delete</a>
               </div>
           </div>
       </div>
   </div>

@section Scripts{ 
    <script src="~/js/Custom.js"></script>
}
